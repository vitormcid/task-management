<div class="card card-outline-secondary">
    <div class="card-header">
        <h3 class="mb-0">Editar Time</h3>
    </div>
    <div class="card-body">
        <%= simple_form_for(Team.new, remote: request.xhr?, html: { data: { modal: true } }) do |f| %>
            <div class="form-group">
                <label for="name">Nome</label>
                <%= f.text_field :name,:class => 'form-control',required:true,value: @team.name %>                   
            </div>
            <div class="form-group">
                <label for="name">Colaboradores </label>                
                <%= select("team", "user_ids", User.all.collect {|p| [ p.email, p.id ] },{}, { multiple: true, class:"form-control select"}) %>
              
                          
            </div> 
           
            <button type="submit" class="btn btn-dark float-right" id="btnLogin" style="padding-right:20px;">Criar</button>
            <button type="submit" data-dismiss="modal" class="btn btn-outline-dark float-right" id="btnLogin" style="margin-right:10px;">Fechar</button>
        <% end %>
    </div>
    <!--/card-body-->
</div>


<script>
$(document).ready(function() {
   $('.select').select2();
});
</script>    