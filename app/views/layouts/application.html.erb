<!DOCTYPE html>
<html>
  <head>
    <title>Desafio Intranett</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <nav class="navbar fixed-top navbar-dark bg-dark">
      <a class="navbar-brand " href="#">Intranett - Gerenciamento de Tarefas</a>
      <span class="navbar-text">
        <% if current_user.present? %>
          <%="#{current_user.email} - "%>
          <%= link_to('Deslogar', destroy_user_session_path, method: :delete) %>  
        <% end %>  
      </span>
   </nav>

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <div style="text-align:center; margin-top:100px">    
      <div style="width:75%; display: inline-block">    
        <%= yield %>    
        <hr>  
      </div>
    </div>

    <div id="modal-holder"></div>

    <footer id="sticky-footer" class="fixed-bottom py-4 bg-dark text-white-50">
    <div class="container text-center">
      <small>Copyright &copy; Intranett Challenge</small>
    </div>
    </footer>  

  </body>
</html>

